<%- include("../partials/header")%>
    <%- include("../partials/navbar")%>

        <div class="container" style="margin-top: 5rem; height: 620px;">

            <%- include("../partials/flash")%>
                <%if(userCart.length!=0){%>
                    <h6 class="display-6">My Cart</h6>

                    <div class="row">
                        <div class="col-lg-8">
                            <%for(let item of userCart){%>
                                <div class="card mb-3" style="width: 90%;">
                                    <div class="row g-0">
                                        <div class="col-md-4">
                                            <img style="width: 200px;" src="<%=item.img%>" alt="...">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%=item.name%>
                                                </h5>

                                                <h7 class="card-title">
                                                    <%=item.price%>
                                                </h7>

                                                <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="post">
                                                    <button class="btn btn-sm btn-danger">remove</button>
                                                </form>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>


                        </div>

                        <div class="col-lg-4 mb-3">
                            <%totalAmount=0%>
                                <h6 class="display-6">Products</h6>
                                <ul class="list-group">

                                    <%for(let item of userCart){%>
                                        <li class="list-group-item">
                                            <%=item.name%> - <strong>&#8377; <%=item.price%></strong></li>
                                        <%totalAmount+=item.price%>
                                            <%}%>

                                </ul>

                                <div class="mt-2">
                                    <p class="fw-bold">Total Amount : &#8377;
                                        <%=totalAmount%>
                                    </p>
                                    <a href="/cart/payment" class="btn btn-success">Proceed To Pay</a>
                                </div>

                        </div>

                    </div>
                    <%}else{%>
                        <div id="cartDiv">
                            <h1 id="cartTitle">MY CART</h1>
                            <img src="https://rukminim1.flixcart.com/www/800/800/promos/16/05/2019/d438a32e-765a-4d8b-b4a6-520b560971e8.png?q=90" id="cartImg" alt="">
                            <h3 id="cartText">Your Cart Is Empty</h3>
                            <form action="/products" method="GET">
                                <button id="cartButton">Shop Now</button>
                            </form>
                        </div>
                        <%} %>

        </div>


        <%- include("../partials/footer")%>