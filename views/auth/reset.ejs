<%- include("../partials/header")%>
    <%- include("../partials/navbar")%>

        <div class="page-wrapper p-t-45 p-b-50" id="log">
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div style="font-size: 25px; width: 70%;text-align: center;margin-left: 100px;margin-top: 50px;">
                        RESET PASSWORD
                    </div>

                    <div class="card-body">
                        <form class="validated-form" action="/reset" method="POST" novalidate>
                            <%- include("../partials/flash")%>

                                <div class="form-row m-b-55">
                                    <div class="name">Enter Password</div>
                                    <div class="value">
                                        <div class="row row-refine">

                                            <div class="col-9">
                                                <div class="input-group-desc">
                                                    <input class="input--style-5 form-control" type="password" name="pass1" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}$" required>
                                                    <div class="invalid-feedback">
                                                        Password must be at least 8 characters, no more than 20 characters, and must include at least one upper case letter, one lower case letter, and one numeric digit.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row m-b-55">
                                    <div class="name">Re-Enter Password</div>
                                    <div class="value">
                                        <div class="row row-refine">

                                            <div class="col-9">
                                                <div class="input-group-desc">
                                                    <input class="input--style-5 form-control" type="password" name="pass2" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}$" required>
                                                    <div class="invalid-feedback">
                                                        Please Provide Password.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    <button class="btn1 btn--pill btn--blue" type="submit">Submit</button>
                                </div>
                                <br>
                                <br>
                                <a href="/login">Login</a>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <%- include("../partials/footer")%>