<%- include("../partials/header")%>
    <%- include("../partials/navbar")%>



        <div class="page-wrapper  p-t-45 p-b-50">
            <div class="wrapper wrapper--w790">
                <%- include("../partials/flash")%>
                    <div class="card card-5">

                        <div class="card-heading1">
                            <h2 class="title text-capitalize">Hello
                                <%=currentUser.name%>
                            </h2>
                        </div>
                        <div class="card-body" style="background-color:rgb(201, 198, 198);">


                            <form action="/user/<%=currentUser._id%>/saveName?_method=PATCH" method="POST">
                                <div class="form-row m-b-55">


                                    <h4 id="Name">Name</h4>
                                    <h4 id="edit1" onclick="change1()">Edit</h4>

                                    <div class="row row-space">

                                        <div class="col-2">

                                            <div class="input-group-desc">
                                                <input class="input--style-5 " id="first_name" type="text" name="first_name" value="<%=currentUser.name.split(' ')[0]%>" disabled required>
                                                <label class="label--desc">first name</label>

                                            </div>


                                        </div>
                                        <div class="col-2">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" id="last_name" type="text" name="last_name" value="<%=currentUser.name.split(' ')[1]%>" disabled required>
                                                <label class="label--desc">last name</label>
                                            </div>
                                        </div>
                                    </div>

                                    <button id="save1" type="submit">Save</button>
                            </form>

                            </div>

                            <form action="/user/<%=currentUser._id%>/saveEmail?_method=PATCH" method="POST">
                                <h4 id="Name">Email</h4>
                                <h4 id="edit2" onclick="change2()">Edit</h4>
                                <div class="form-row m-b-55">

                                    <div id="value">
                                        <div class="col-12">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" id="email" type="text" name="email" value="<%=currentUser.email%>" disabled required>
                                                <label class="label--desc">email</label>
                                            </div>
                                        </div>

                                    </div>

                                    <button id="save2" type="submit">save</button>
                            </form>

                            </div>

                            <form action="/user/<%=currentUser._id%>/savePhone?_method=PATCH" method="POST">
                                <h4 id="Name">Phone</h4>
                                <h4 id="edit3" onclick="change3()">Edit</h4>
                                <div class="form-row m-b-55">
                                    <div id="value">
                                        <div class="col-12">
                                            <div class="input-group-desc">
                                                <input class="input--style-5" id="phone" type="text" name="phone" value="<%=currentUser.phone%>" disabled required>
                                                <label class="label--desc">Phone Number</label>
                                            </div>
                                        </div>
                                    </div>

                                    <button id="save3">save</button>
                            </form>

                            </div>


                        </div>
                    </div>
            </div>
            <script>
                let edit1 = document.getElementById('edit1');
                let edit2 = document.getElementById('edit2');
                let edit3 = document.getElementById('edit3');
                let firstName = document.getElementById('first_name');
                let lastName = document.getElementById('last_name');
                let email = document.getElementById('email');
                let phone = document.getElementById('phone');
                let save1 = document.getElementById('save1');
                let save2 = document.getElementById('save2');
                let save3 = document.getElementById('save3');

                function change1() {
                    if (save1.style.display == "none") {
                        firstName.disabled = false;
                        lastName.disabled = false;
                        firstName.focus();
                        firstName.style.backgroundColor = "white";
                        lastName.style.backgroundColor = "white";
                        save1.style.display = 'block';
                        edit1.innerHTML = "Cancle";

                    } else {
                        firstName.disabled = true;
                        lastName.disabled = true;

                        firstName.style.backgroundColor = "#e5e5e5";
                        lastName.style.backgroundColor = "#e5e5e5";
                        save1.style.display = 'none';
                        edit1.innerHTML = 'Edit';

                    }

                }

                function change2() {
                    if (save2.style.display == "none") {
                        email.disabled = false;
                        email.focus();
                        email.style.backgroundColor = "white";
                        save2.style.display = 'block';
                        edit2.innerHTML = 'Cancle';
                    } else {
                        email.disabled = true;
                        email.style.backgroundColor = "#e5e5e5";
                        save2.style.display = 'none';
                        edit2.innerHTML = 'Edit';
                    }

                }

                function change3() {
                    if (save3.style.display == "none") {
                        phone.disabled = false;
                        phone.focus();
                        phone.style.backgroundColor = "white";
                        save3.style.display = 'block';
                        edit3.innerHTML = 'Cancle'
                    } else {
                        phone.disabled = true;
                        phone.style.backgroundColor = "#e5e5e5";
                        save3.style.display = 'none';
                        edit3.innerHTML = 'Edit';
                    }

                }
            </script>
            <%- include("../partials/footer")%>